                <div class="container">
                    <!-- .main-nav start -->
                    <div class="main-nav" id="SubHeaderForMainPage">
                        <!-- .row start -->
                        <div class="row">
                            <div class="col-md-12">
                                <nav class="navbar navbar-default nav-left" role="navigation">

                                    <!-- .navbar-header start -->
                                    <div class="navbar-header">
                                        <div class="logo">
                                            <a href="/">
                                                <img src="/img/logo.png" class="img-responsive"
